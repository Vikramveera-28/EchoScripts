{
  "name": "vocalkey",
  "version": "1.0.0",
  "description": "Windows desktop speech-to-text application with Deepgram integration",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "rebuild": "electron-rebuild -f -w @nut-tree-fork/nut-js",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "speech-to-text",
    "deepgram",
    "electron",
    "voice-typing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@deepgram/sdk": "^3.4.0",
    "@nut-tree-fork/nut-js": "^4.2.0",
    "auto-launch": "^5.0.6"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.vocalkey.app",
    "productName": "VocalKey",
    "files": [
      "src/**/*",
      "assets/**/*",
      "config.js"
    ],
    "extraResources": [
      {
        "from": "config.js",
        "to": "config.js"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "directories": {
      "output": "dist"
    }
  }
}